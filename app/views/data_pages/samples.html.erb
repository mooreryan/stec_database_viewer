<h1>View</h1>
<h2>Wommack Lab Sample Info</h2>

<%= render 'layouts/sample_nav_bar' %>

<form action="">
  <p>Sample:
    <input type="text" name="username" size="5" 
	   placeholder="eg. 14H"/>
    <input type="submit" name="Filter" value="Filter" 
	   onClick="alert( 'Hello World!' );" />
  </p>
</form

<div id="table-container" class="table-container">
  <table class="scroll-table">
    <thead class="fixed-header">
      <tr class="header-row">
	<th>ID</th>
	<th>Type</th>
	<th>Cryo Num</th>
	<th>Cryo Loc</th>
	<th>Date</th>
	<th>Pen</th>
	<th>Serotype?</th>
	<th>Status</th>
      </tr>
    </thead>
    <tbody class="scroll-content">
      <% @fecal.each do |record| %>
	<tr>
	  <td><%= record.sample_id %></td>
	  <td><%= record.sample_type  %></td>
	  <td><%= record.cryobox_num %></td>
	  <td><%= record.cryobox_location %></td>
	  <td><%= record.sample_date %></td>
	  <td><%= record.pen_id %></td>
	  <td><%= record.serotype %></td>
	  <td><%= record.processing_status %></td>
	</tr>
      <% end %>
      
      <% @hide.each do |record| %>
	<tr>
	  <td><%= record.sample_id %></td>
	  <td><%= record.sample_type  %></td>
	  <td><%= record.cryobox_num %></td>
	  <td><%= record.cryobox_location %></td>
	  <td><%= record.sample_date %></td>
	  <td><%= record.pen_id %></td>
	  <td><%= record.serotype %></td>
	  <td><%= record.processing_status %></td>
	</tr>
      <% end %>
      
      <% @carcass.each do |record| %>
	<tr>
	  <td><%= record.sample_id %></td>
	  <td><%= record.sample_type  %></td>
	  <td><%= record.cryobox_num %></td>
	  <td><%= record.cryobox_location %></td>
	  <td><%= record.sample_date %></td>
	  <td><%= record.pen_id %></td>
	  <td><%= record.serotype %></td>
	  <td><%= record.processing_status %></td>
	</tr>
      <% end %>
    </tbody>
  </table>
</div>
